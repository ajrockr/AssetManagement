# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 4
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,css}]
indent_size = 2
end_of_line = lf

[*.json]
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[*.{twig,html}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2