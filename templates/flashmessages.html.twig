{% for message in app.flashes('error') %}
    <script type="text/javascript">
        Toastify({
            text: "{{ message }}",
            duration: 3000,
            newWindow: true,
            close: true,
            gravity: "top",
            position: "right",
            stopOnFocus: true,
            style: {
                background: "#dc3545",
            },
        }).showToast();
    </script>
{% endfor %}
