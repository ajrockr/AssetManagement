{% block collection_form %}
    {% set assetCollectedFlashBag = app.flashes('assetCollected') %}
    {% if assetCollectedFlashBag|length > 0 %}
        {% for label, nextOpenSlot in assetCollectedFlashBag %}
            <div class="modal fade" id="assetCheckinCompletedModal" data-bs-backdrop="static" data-bs-keyword="false" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-body align-middle text-center">
                            {% if nextOpenSlot is defined %}
                                <div class="display-4 text-success">Asset assigned to:</div><br />
                                <div class="display-1 fw-bold text-light">{{ nextOpenSlot[0] }}</div>
                                <div class="display-1 text-light-emphasis fw-bolder">{{ nextOpenSlot[1] }}</div>
                            {% endif %}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Close</button>
                            <button class="btn btn-primary" data-bs-target="#assetCheckinSelectStorageModal" data-bs-toggle="modal">Add Another</button>
                        </div>
                    </div>
                </div>
            </div>
            {{ encore_entry_script_tags('app') }}
            <script type="text/javascript">
                $(document).ready(function() {
                    const assetCheckinCompleteModal = $('#assetCheckinCompletedModal');
                    assetCheckinCompleteModal.modal('show');
                });
            </script>
        {% endfor %}
    {% endif %}
{% endblock %}
